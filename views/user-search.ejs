<!DOCTYPE html>
<html lang="es">

<%- include ('partials/head.ejs') %>
<body>
    <div class="content">
<%- include ('partials/header.ejs') %>
    <article>
    <%- include ('partials/search.ejs') %>

        <h2><%= title %></h2>

        <form class="search" method = "POST" action = "/user/filter">
            <div class="search-box">
                <img class="search-icon" src="/img/busqueda.png">
                <input class="search-input" name ="filter" type="text" placeholder="Filtrar por nombre de usuario">
            </div>
            <input type="submit" value="Filtrar">
        </form>
        <% if (errorMsg!=null) { %>
            <div class="error">
                <%= errorMsg %>
            </div>
            <% } %>
                <div class="users-group">

                    <% if (users) { users.forEach(function(users) { %>
                        <div class="user-data">
                            <img class="userPhoto" src="/user_imgs/<%= users.img %>" alt="imagen de perfil">
                            <a href="/user/<%= users.id %>">
                            <span>
                                <%= users.name %>
                            </span>
                            <span class="number"><%= users.score %></span>                            
                            <% if (users.tag!=null) { %>
                            <a href="/question/filter-tag/<%= users.tag %>">
                                <span class="tag"><%= users.tag %></span>
                            </a>
                            <% } %>
                        </div>
                        <% })}; %>

                </div>
    </article>
</div>
    <%- include ('partials/footer.ejs') %>

</body>

</html>